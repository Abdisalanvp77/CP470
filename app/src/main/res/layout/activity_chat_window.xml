<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatWindow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_chats_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_above="@id/send_chat_button">

        </ListView>

        <EditText
            android:id="@+id/chat_text_input"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="1220dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:hint="@string/enter_chat_hint"
            android:layout_marginBottom="4dp"
            android:inputType="text"
             />

        <Button
            android:id="@+id/send_chat_button"
            android:layout_width="135dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="11dp"
            android:background="#c20586"
            android:onClick="sendChat"
            android:text="@string/button"
            android:textColor="#ffffff" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>